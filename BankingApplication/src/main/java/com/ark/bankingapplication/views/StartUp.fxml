<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" fx:id="startUp" maxHeight="960.0" maxWidth="1680.0" minHeight="960.0"
         minWidth="1680.0" prefHeight="960.0" prefWidth="1680.0" type="javafx.scene.layout.AnchorPane"
         AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
         AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/9">
    <HBox alignment="CENTER" prefHeight="960.0" prefWidth="1680.0">
        <AnchorPane prefHeight="960.0" prefWidth="840.0">
            <ImageView fx:id="bankLogo" fitHeight="372.0" fitWidth="280.0" layoutX="50.0" layoutY="294.0"
                       pickOnBounds="true" preserveRatio="true"/>
            <Label fx:id="bankNameLabel" layoutX="341.0" layoutY="496.0" prefHeight="164.0" prefWidth="482.0"
                   styleClass="bankName" text="Label">
                <font>
                    <Font size="96.0"/>
                </font>
            </Label>
        </AnchorPane>
        <AnchorPane id="loginPane" fx:id="loginAnchorPane" maxHeight="1.7976931348623157E308"
                    maxWidth="1.7976931348623157E308" styleClass="loginPane" HBox.hgrow="ALWAYS">
            <VBox alignment="CENTER" fillWidth="false" minHeight="960.0" minWidth="840.0" spacing="20.0">
                <ImageView fitHeight="150.0" fitWidth="200.0" opacity="0.32" pickOnBounds="true" preserveRatio="true">
                    <Image url="@images/lock.png"/>
                </ImageView>
                <TextField fx:id="usernameTextField" prefHeight="40.0" prefWidth="300.0" promptText="Gebruikersnaam"
                           styleClass="transparent-input"/>
                <TextField fx:id="residenceTextField" prefHeight="40.0" prefWidth="300.0" promptText="Woonplaats"
                           styleClass="transparent-input"/>
                <PasswordField fx:id="passwordField" prefHeight="40.0" prefWidth="300.0" promptText="Wachtwoord"
                               styleClass="transparent-input"/>
                <Button fx:id="loginButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="300.0"
                        styleClass="ark-button" text="Inloggen"/>
                <Label fx:id="goToRegisterPane" prefHeight="17.0" prefWidth="300.0"
                       text="Nog geen account? Registreer je hier." textFill="#e7e7e7" underline="true">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Label>
                <Label fx:id="errorMessageLabel" prefHeight="150.0" prefWidth="714.0" styleClass="error-message"
                       visible="false">
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                </Label>
            </VBox>
        </AnchorPane>
    </HBox>
    <AnchorPane id="registerPane" fx:id="registerAnchorPane" layoutX="840.0" prefHeight="960.0" prefWidth="840.0"
                style="-fx-background-color: #212636;" styleClass="registerPane" visible="false">
        <VBox alignment="CENTER" fillWidth="false" prefHeight="960.0" prefWidth="840.0" spacing="20.0">
            <ImageView fitHeight="150.0" fitWidth="200.0" opacity="0.32" pickOnBounds="true" preserveRatio="true">
                <Image url="@images/lock.png"/>
            </ImageView>
            <TextField fx:id="registernameTextField" prefHeight="40.0" prefWidth="300.0" promptText="Gebruikersnaam"
                       styleClass="transparent-input"/>
            <TextField fx:id="registerResidenceTextField" prefHeight="40.0" prefWidth="300.0" promptText="Woonplaats"
                       styleClass="transparent-input"/>
            <PasswordField fx:id="registerPasswordField" prefHeight="40.0" prefWidth="300.0" promptText="Wachtwoord"
                           styleClass="transparent-input"/>
            <PasswordField fx:id="registerPasswordCheckPasswordField" prefHeight="40.0" prefWidth="300.0"
                           promptText="Herhaal wachtwoord" styleClass="transparent-input"/>
            <Button fx:id="registerButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="300.0"
                    styleClass="ark-button" text="Rgistreren"/>
            <Label fx:id="toLoginPane" prefHeight="17.0" prefWidth="300.0"
                   text="Al een account? Klik hier om in te loggen" textFill="#e7e7e7" underline="true">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Label>
            <Label fx:id="registerErrorMessagesLabel" prefHeight="150.0" prefWidth="714.0" styleClass="error-message"
                   visible="false">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
            </Label>
        </VBox>
    </AnchorPane>
</fx:root>
